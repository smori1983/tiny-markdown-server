{
  "productName": "TinyMarkdownServer",
  "directories": {
    "output": "_dist/${version}"
  },
  "files": [
    "!.idea/**/*",
    "!_dist/**/*",
    "!build_scripts/**/*",
    "!files_builtin/highlight.zip",
    "!test/**/*",
    "!test_resource/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": "x64"
      }
    ]
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": "x64"
      },
      {
        "target": "zip",
        "arch": "x64"
      }
    ]
  }
}
