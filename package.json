{
  "name": "tiny-markdown-server",
  "version": "2.0.0-dev",
  "description": "Displays markdown files in the browser.",
  "main": "main.js",
  "dependencies": {
    "bootstrap": "^4.4.1",
    "ejs": "^3.0.2",
    "ejs-electron": "^2.0.3",
    "escape-string-regexp": "^3.0.0",
    "express": "^4.17.1",
    "github-markdown-css": "^4.0.0",
    "jquery": "^3.5.0",
    "jsonschema": "^1.2.6",
    "markdown-it": "^10.0.0",
    "md5": "^2.2.1",
    "n-readlines": "^1.0.0",
    "popper.js": "^1.16.1",
    "sprintf-js": "^1.1.2",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@types/buffers": "^0.1.31",
    "@types/express": "^4.17.6",
    "@types/json-schema": "^7.0.4",
    "@types/yargs": "^15.0.4",
    "browser-sync": "^2.26.7",
    "electron": "^4.2.12",
    "electron-builder": "^22.4.1",
    "eslint": "^6.8.0",
    "istanbul": "^0.4.5",
    "license-checker": "^25.0.1",
    "mocha": "^7.1.1",
    "mocha-testdata": "^1.2.0",
    "sinon": "^9.0.2",
    "watch": "^1.0.2"
  },
  "scripts": {
    "license:summary": "license-checker --production --summary --unknown",
    "license:generate": "node build_scripts/license.js",
    "test": "mocha test/*",
    "test:coverage": "istanbul cover --print both _mocha -- test/*",
    "watch:test": "watch 'npm run test' app/ lib/ test/ --interval=1 --ignoreDotFiles",
    "app": "electron main.js",
    "build": "npm run build:mac && npm run build:win",
    "build:mac": "node build_scripts/build-mac.js",
    "build:win": "node build_scripts/build-win.js"
