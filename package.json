{
  "name": "tiny-markdown-server",
  "version": "2.0.0-dev",
  "description": "Displays markdown files in the browser.",
  "scripts": {
    "license:summary": "license-checker --production --summary --unknown",
    "license:generate": "node build_scripts/license.js",
    "test": "mocha test/*",
    "test:coverage": "istanbul cover --print both _mocha -- test/*",
    "webpack:renderer": "webpack --config webpack.config.js",
    "app": "electron --trace-warnings src_main/main.js",
    "build": "npm run build:mac && npm run build:win",
    "build:mac": "node build_scripts/build-mac.js",
    "build:win": "node build_scripts/build-win.js"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "ejs": "^3.1.9",
    "escape-string-regexp": "^4.0.0",
    "express": "^4.19.2",
    "github-markdown-css": "^5.3.0",
    "jquery": "^3.7.1",
    "jsonschema": "^1.4.1",
    "markdown-it": "^13.0.2",
    "n-readlines": "^1.0.1",
    "open": "^8.4.2",
    "sprintf-js": "^1.1.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/buffers": "^0.1.34",
    "@types/express": "^4.17.21",
    "@types/json-schema": "^7.0.15",
    "@types/yargs": "^17.0.32",
    "babel-loader": "^9.1.3",
    "browser-sync": "^3.0.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "electron": "^27.0.2",
    "electron-builder": "24.6.*",
    "eslint": "^8.56.0",
    "istanbul": "^0.4.5",
    "license-checker": "^25.0.1",
    "mocha": "^10.2.0",
    "mocha-testdata": "^1.2.0",
    "sinon": "^17.0.1",
    "style-loader": "^3.3.3",
    "vue": "^3.4.5",
    "vue-loader": "^17.4.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "main": "src_main/main.js",
  "author": "Shinichiro MORI",
  "license": "MIT"
}
