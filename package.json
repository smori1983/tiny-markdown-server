{
  "name": "tiny-markdown-server",
  "version": "2.0.0-dev",
  "description": "Displays markdown files in the browser.",
  "scripts": {
    "license:summary": "license-checker --production --summary --unknown",
    "license:generate": "node build_scripts/license.js",
    "test": "mocha test/*",
    "test:coverage": "istanbul cover --print both _mocha -- test/*",
    "test:watch": "watch 'npm run test' app/ lib/ test/ --interval=1 --ignoreDotFiles",
    "app": "electron main.js",
    "build": "npm run build:mac && npm run build:win",
    "build:mac": "node build_scripts/build-mac.js",
    "build:win": "node build_scripts/build-win.js"
  },
  "dependencies": {
    "bootstrap": "^4.6.1",
    "ejs": "^3.1.6",
    "ejs-electron": "^2.1.1",
    "escape-string-regexp": "^4.0.0",
    "express": "^4.17.2",
    "github-markdown-css": "^4.0.0",
    "jquery": "^3.6.0",
    "jsonschema": "^1.4.0",
    "markdown-it": "^12.3.2",
    "n-readlines": "^1.0.1",
    "open": "^8.4.0",
    "popper.js": "^1.16.1",
    "sprintf-js": "^1.1.2",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@types/buffers": "^0.1.31",
    "@types/express": "^4.17.13",
    "@types/json-schema": "^7.0.9",
    "@types/yargs": "^17.0.8",
    "browser-sync": "^2.27.7",
    "electron": "^13.6.6",
    "electron-builder": "22.9.*",
    "eslint": "^7.32.0",
    "istanbul": "^0.4.5",
    "license-checker": "^25.0.1",
    "mocha": "^9.2.0",
    "mocha-testdata": "^1.2.0",
    "sinon": "^11.1.2",
    "watch": "^1.0.2"
  },
  "main": "main.js",
  "author": "Shinichiro MORI",
  "license": "MIT"
}
